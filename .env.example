# Environment variables for production deployment
# Copy this file to .env and fill in your values

# Application
APP_NAME=BD | AS Platform
APP_VERSION=2.0.0
DEBUG=false

# Server (Cloud Run uses 8080 by default)
HOST=0.0.0.0
PORT=8080

# CORS (adjust for your domain in production)
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Google Cloud
GOOGLE_CLOUD_PROJECT=gen-lang-client-0481115304
GCS_BUCKET_NAME=bd-image-parser-products

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_TEXT=gemini-2.5-flash-lite
GEMINI_MODEL_MULTIMODAL=gemini-2.5-flash-image
GEMINI_ENDPOINT=https://api.gemini.com/v1/process

# GCP Config
GCP_PROJECT_ID=gen-lang-client-0481115304
GCP_LOCATION=us-central1
GCP_STORAGE_BUCKET=bd-image-parser-products
GCP_SERVICE_ACCOUNT_KEY_PATH=/secrets/bd-image-parser-sa-key
GCP_SERVICE_ACCOUNT_SECRET_NAME=bd-image-parser-sa-key
GCP_USE_SECRET_MANAGER=true